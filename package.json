{
  "name": "radar",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "devtools": "react-devtools",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:dev:log_cmd": "tauri dev -- --features command_logging",
    "tauri:dev:log_all": "tauri dev -- --features command_logging,all_logging",
    "tauri:dev:log_cmd:public_net": "RADAR_LOG_COMMANDS=get_public_network_info tauri dev -- --features command_logging",
    "tauri:dev:log_cmd:local_net": "RADAR_LOG_COMMANDS=run_network_scan,get_consolidated_services,discover_mdns_streaming,discover_upnp_streaming tauri dev -- --features command_logging",
    "tauri:dev:mdns": "tauri dev -- --features log_enable_mod_mdns_sd",
    "tauri:dev:upnp": "tauri dev -- --features log_enable_mod_upnp",
    "tauri:dev:service_daemon": "tauri dev -- --features log_enable_mod_service_daemon",
    "tauri:dev:network": "tauri dev -- --features network_logging",
    "tauri:dev:full_debug": "tauri dev -- --features full_debug",
    "tauri:dev:mdns_upnp": "tauri dev -- --features log_enable_mod_mdns_sd,log_enable_mod_upnp",
    "tauri:dev:mdns_service": "tauri dev -- --features log_enable_mod_mdns_sd,log_enable_mod_service_daemon",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "check-deps": "depcheck --ignores=\"@types/*,@vitejs/*\""
  },
  "dependencies": {
    "@tauri-apps/api": "^2.4.0",
    "@tauri-apps/plugin-notification": "^2.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.1.16"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@tauri-apps/cli": "^2.0.0-beta.0",
    "@types/node": "^22.13.11",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitejs/plugin-react": "^4.3.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "react-devtools": "^6.1.1",
    "typescript": "^5.0.2",
    "vite": "^5.0.0"
  }
}
