{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "radar",
  "version": "0.1.0",
  "identifier": "com.radar.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "radar",
        "width": 480,
        "height": 600,
        "minWidth": 480,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "center": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": {
        "window": {
          "startDragging": true,
          "setSize": true,
          "setMinSize": true
        }
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "execute": true
      },
      "app": {
        "all": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "process": {
        "all": true
      }
    }
  }
}
