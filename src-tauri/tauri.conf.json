{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "radar",
  "version": "0.1.0",
  "identifier": "com.radar.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "radar",
        "width": 480,
        "height": 600,
        "minWidth": 480,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "center": true,
        "theme": "Dark",
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "notification-permissions",
          "windows": ["*"],
          "permissions": ["notification:default"]
        },
        {
          "identifier": "draggable-window",
          "windows": ["*"],
          "permissions": ["core:window:allow-start-dragging"]
        },
        {
          "identifier": "window-management",
          "windows": ["*"],
          "permissions": [
            "core:window:allow-set-fullscreen",
            "core:window:allow-is-fullscreen"
          ]
        },
        {
          "identifier": "events",
          "windows": ["*"],
          "permissions": ["core:event:default", "core:event:allow-listen"]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "http": {
      "all": false,
      "request": false,
      "scope": []
    },
    "network": {
      "all": true
    },
    "shell": {
      "open": true
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "notification": null,
    "window": {
      "all": true
    },
    "clipboard": {
      "all": true
    },
    "log": null
  }
}
